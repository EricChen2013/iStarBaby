<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="4dip" >

    <ImageView
        android:id="@+id/monitor_list_addimg"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:contentDescription="@string/no_comment"
        android:scaleType="fitCenter"
        android:src="@drawable/monitor_add" />

    <TextView
        android:id="@+id/monitor_list_additem"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/monitor_list_addimg"
        android:gravity="center_vertical"
        android:textColor="@color/istar_g"
        android:textSize="22sp" />

</RelativeLayout>