<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/istar_z"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registration_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBarLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/registratin_code_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:layout_marginTop="4dp"
            android:text="我们已给你的手机号码，发送了一条验证短信。"
            android:textColor="@color/istar_g"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registratin_authcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registratin_code_label"
            android:layout_marginTop="12dp"
            android:background="@drawable/text_field"
            android:ems="10"
            android:hint="请输入短信验证码"
            android:maxLength="4"
            android:maxLines="1"
            android:numeric="integer"
            android:text=""
            android:textColor="@color/istar_h"
            android:textColorHint="@color/istar_i"
            android:textSize="18sp" />

        <Button
            android:id="@+id/registratin_next_btn"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/registratin_authcode"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_password_btn"
            android:text="下一步"
            android:textColor="@color/istar_link"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>