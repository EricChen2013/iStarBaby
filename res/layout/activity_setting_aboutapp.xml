<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat" >

    <include
        android:id="@+id/include1"
        layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/setting_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/setting_upicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/no_comment"
            android:scaleType="fitCenter"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/version_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/istar_h"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_setting"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/setting_item_click_top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="版本更新"
                android:textColor="@color/istar_a"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/version_checked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="--"
                android:textColor="@color/istar_h"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/istar_i" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/setting_item_click_middle"
            android:drawableRight="@drawable/ab_forward"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="服务条款"
            android:textColor="@color/istar_a"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/istar_i" />

        <TextView
            android:id="@+id/proposal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/setting_item_click_bottom"
            android:drawableRight="@drawable/ab_forward"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="建议反馈"
            android:textColor="@color/istar_a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Copyright©2014 Leature Technology Co., Ltd. All Rights Reserved."
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>