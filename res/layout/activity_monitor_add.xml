<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/istar_z" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="设备信息"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip" >

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="UID"
                        android:textColor="@color/istar_g"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/monitor_uid_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/text_field"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:ems="6"
                        android:hint="监护器UID"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/istar_h"
                        android:textColorHint="@color/istar_i"
                        android:textSize="18sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="6dp" >

                    <LinearLayout
                        android:id="@+id/qrcode_scan_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/login_password_btn"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:contentDescription="@string/no_comment"
                            android:src="@drawable/saoyisao" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="扫一扫"
                            android:textColor="@color/istar_g"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="8dip"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/monitor_search_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/login_password_btn"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:contentDescription="@string/no_comment"
                            android:src="@drawable/soushuo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="搜  索"
                            android:textColor="@color/istar_g"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" >

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="名称"
                        android:textColor="@color/istar_g"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/monitor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/text_field"
                        android:ems="6"
                        android:hint="@string/input_hint"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Camera"
                        android:textColor="@color/istar_h"
                        android:textColorHint="@color/istar_i"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp" >

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="密码"
                        android:textColor="@color/istar_g"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/monitor_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="admin"
                        android:textColor="@color/istar_h"
                        android:textColorHint="@color/istar_i"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="下一步"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dip"
                    android:gravity="center_vertical"
                    android:text="    初次使用监护器时, 测试连接并进行初始设置"
                    android:textColor="@color/istar_x"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_setting_wifi"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/login_password_btn"
                    android:drawableRight="@drawable/ab_forward"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:text="连  接"
                    android:textColor="@color/istar_g"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>