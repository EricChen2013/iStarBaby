<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/istar_z" >

    <RelativeLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <include layout="@layout/title_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBarLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/password_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:layout_marginTop="4dp"
            android:text="请输入4-16个字符(数字、字母、下划线)的新密码。"
            android:textColor="@color/istar_g"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pass_word_submitcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_hint"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_field"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/istar_h"
            android:textColorHint="@color/istar_i"
            android:textSize="18sp" />

        <Button
            android:id="@+id/pass_word_submit_next_btn"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pass_word_submitcode"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_password_btn"
            android:text="提交新密码"
            android:textColor="@color/istar_link"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>