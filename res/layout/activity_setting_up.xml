<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="1dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/headerbg_trans"
                android:contentDescription="@string/no_comment"
                android:scaleType="fitCenter" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_repeat" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/setting_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_setting"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/settingtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_item_click_all"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/setting_upicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/master"
                android:contentDescription="@string/no_comment"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/noimage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/setting_upname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:drawableRight="@drawable/ab_forward"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="账号信息："
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/setting_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_upname"
                    android:gravity="left|center_vertical"
                    android:text="账号信息："
                    android:textColor="@color/istar_i"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/setting_userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/setting_info_text"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/setting_info_text"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/istar_i"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_layout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_setting"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/general_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_click_top"
            android:drawableRight="@drawable/ab_forward"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="通用"
            android:textColor="@color/istar_g"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/istar_i" />

        <TextView
            android:id="@+id/recommed_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_click_middle"
            android:drawableRight="@drawable/ab_forward"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="好友分享"
            android:textColor="@color/istar_g"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/istar_i" />

        <TextView
            android:id="@+id/regardtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_click_bottom"
            android:drawableRight="@drawable/ab_forward"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="关于 育儿宝"
            android:textColor="@color/istar_g"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_setting"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_click_all"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/istar_b"
            android:textSize="20sp" />
    </LinearLayout>

    <include
        android:id="@+id/include1"
        layout="@layout/title_bar" />

</RelativeLayout>