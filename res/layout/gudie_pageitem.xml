<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/page_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/no_comment"
        android:scaleType="fitXY"
        android:src="@drawable/tutorial01" />

    <ImageButton
        android:id="@+id/into_exitbtn"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@id/page_image"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/tutorial_start"
        android:contentDescription="@string/no_comment"
        android:src="@drawable/bg_into_btn"
        android:visibility="invisible" />

    <Button
        android:id="@+id/into_logbtn"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@id/page_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/gudie_logbtn"
        android:visibility="invisible" />

</RelativeLayout>