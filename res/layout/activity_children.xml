<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeat"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/headerbg_trans"
                android:contentDescription="@string/no_comment"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" >

                <ImageView
                    android:id="@+id/child_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_detailpic"
                    android:contentDescription="@string/no_comment"
                    android:src="@drawable/noimage_child" />

                <FrameLayout
                    android:id="@+id/child_flower_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/child_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:textColor="@color/istar_h"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/child_detail_fenwanshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bunben"
                        android:paddingLeft="65dp"
                        android:paddingTop="10dp"
                        android:text="-"
                        android:textColor="@color/istar_h"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/child_detail_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/sex"
                        android:gravity="center"
                        android:textColor="@color/istar_h"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/child_detail_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="180dp"
                        android:background="@drawable/birthday"
                        android:gravity="center"
                        android:textColor="@color/istar_h"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/child_detail_mhuanyunqijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="205dp"
                        android:background="@drawable/syuuki"
                        android:paddingLeft="70dp"
                        android:paddingTop="18dp"
                        android:text="-"
                        android:textColor="@color/istar_h"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/child_nature_hwtx_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/data"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="10dp" >

                        <TextView
                            android:id="@+id/child_detail_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity=""
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/child_detail_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/child_detail_xiongwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/child_detail_touwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="14sp" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/child_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/child_image"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/child_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="姓名"
                        android:textColor="@color/istar_a"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/child_detail_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="年龄"
                        android:textColor="@color/istar_a"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/child_btn"
                        android:layout_width="75dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/child_deail_but"
                        android:contentDescription="@string/no_comment" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/movelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/child_detail_hw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/child_detail_hw" >

                        <TextView
                            android:id="@+id/text_height"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_weight"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="40dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/child_detail_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/child_detail_tx" >

                        <TextView
                            android:id="@+id/text_touwei"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_xiongwei"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="40dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/istar_h"
                            android:textSize="16sp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/movelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/child_detail_yufang"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/children_prenmuneventday"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:text="登录预防记录"
                            android:textColor="@color/istar_h"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginLeft="80dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/child_premun_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/lab_teiki"
                            android:textColor="@color/istar_h"
                            android:textSize="18sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/child_premun_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/istar_h"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/movelayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/child_deail_album" >

                    <ImageView
                        android:id="@+id/child_detail_album"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/child_icon"
                        android:contentDescription="@string/no_comment"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/child_detail_event_date"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="46dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/child_detail_event_name"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/child_detail_event_date"
                        android:layout_below="@id/child_detail_event_date"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textColor="@color/istar_a"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/title_bar" />

</FrameLayout>