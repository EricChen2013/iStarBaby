<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/istar_z"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/headerbg_trans"
                android:contentDescription="@string/no_comment"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:gravity="center_vertical"
                    android:text="    修改监护器名称及监护器的连接密码"
                    android:textColor="@color/istar_g"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.0"
                        android:gravity="center_vertical"
                        android:text="名 称 :"
                        android:textColor="@color/istar_g"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/monitor_devnickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/text_field"
                        android:capitalize="characters"
                        android:hint="@string/input_hint"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/istar_h"
                        android:textColorHint="@color/istar_i" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:gravity="center_vertical"
                        android:text="密 码 :"
                        android:textColor="@color/istar_g"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/monitor_viewpwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/text_field"
                        android:capitalize="characters"
                        android:hint="@string/input_hint"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/istar_h"
                        android:textColorHint="@color/istar_i" />
                </LinearLayout>

                <Button
                    android:id="@+id/monitor_name_modify"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/login_password_btn"
                    android:text="名称／密码 保存"
                    android:textColor="@color/istar_link" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.100000024dip"
                    android:layout_marginTop="4dip"
                    android:background="#ffffffff"
                    android:contentDescription="@string/no_comment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="共享列表"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical"
                    android:text="    设置共享监护器, 让亲友看看你的影像"
                    android:textColor="@color/istar_g"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_friend_list"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/login_password_btn"
                    android:text="共享设置"
                    android:textColor="@color/istar_link"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.100000024dip"
                    android:layout_marginTop="4dp"
                    android:background="#ffffffff"
                    android:contentDescription="@string/no_comment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="管理"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical"
                    android:text="    监护器的高级设置(修改设备安全密码及高清视频等详细设置)"
                    android:textColor="@color/istar_g"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/monitor_advance_setting"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/login_password_btn"
                    android:enabled="false"
                    android:text="高级设置"
                    android:textColor="@color/istar_x"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.100000024dip"
                    android:layout_marginTop="4dp"
                    android:background="#ffffffff"
                    android:contentDescription="@string/no_comment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/setting_item_click_all"
                android:orientation="vertical"
                android:padding="6dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快捷方式"
                    android:textColor="@color/istar_g"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/div_02"
                    android:contentDescription="@string/no_comment" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="动作警告"
                            android:textColor="@color/istar_g"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="只启动低级别的动作侦测(高级设置里可设置其他级别)"
                            android:textColor="@color/istar_x"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <cn.leature.istarbaby.view.SwitchButton
                        android:id="@+id/set_switchbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:text="SwitchButton" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/title_bar" />

</FrameLayout>